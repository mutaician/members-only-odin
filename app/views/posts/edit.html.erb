<h1>Edit Post</h1>

<%= form_with model: @post, url: post_path(@post), method: :patch do |form| %>
    <div class="field">
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </div>
    <div class="field">
        <%= form.label :content %><br>
        <%= form.text_area :content %>
    </div>

    <div class="actions">
        <%= form.submit 'Update Post'%>
    </div>
<% end %>

<%= link_to 'Back', posts_path %>