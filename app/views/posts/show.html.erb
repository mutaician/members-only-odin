<h1> <%= @post.title%> </h1>

<div class="post">
    <p> <%= @post.content%> </p>
    <% if user_signed_in? %>
        <p> Posted by: <%= @post.user.username%> </p>
    <% end %>
</div>

<% if user_signed_in? %>
    <%= link_to "Edit", edit_post_path(@post) %>
    <%= link_to "Delete", post_path(@post), data: { 
        turbo_method: :delete, turbo_confirm: "Are you sure?"
     } %>
<% end %>

<%= link_to "Back", posts_path %>